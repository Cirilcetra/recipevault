{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions",
    "runtime": "python312",
    "secrets": ["OPENAI_API_KEY"],
    "predeploy": [
      "cd functions && pip install -r requirements.txt"
    ]
  }
}
